@page "/familia"

<PageTitle>Familias</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Familias" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenButton Icon="add_circle_outline" Text="Agregar" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenTextBox Placeholder="Buscar..." style="display: block; width: 100%" @oninput="@Search" aria-label="Search by all string columns" />
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"   AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@familia" TItem="ScapeTravelWEB.Models.ScapeTravelDB.Familia">
            <Columns>
                <RadzenDataGridColumn TItem="ScapeTravelWEB.Models.ScapeTravelDB.Familia" Property="Id" Title="Id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ScapeTravelWEB.Models.ScapeTravelDB.Familia" Property="Nombre" Title="Nombre">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ScapeTravelWEB.Models.ScapeTravelDB.Familia" Filterable="false" Sortable="false" Width="160px" TextAlign="TextAlign.Center">
                    <Template Context="familia">

                        <RadzenButton ButtonStyle="ButtonStyle.Success" Icon="groups" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat" Text="Integrantes"
                            Click=@(args => FindAllIntegrants(args, familia))/>

                        <RadzenButton Text="Editar" ButtonStyle="ButtonStyle.Info" Icon="account_box" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => EditRow(args, familia)) @onclick:stopPropagation="true" />

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, familia)) @onclick:stopPropagation="true" />

                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
